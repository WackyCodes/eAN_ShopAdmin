<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRecyclerBack"
    tools:context=".addnew.AddNewImageActivity">


    <LinearLayout
        android:id="@+id/add_new_cat_item"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/back_rectangle_4dp_layout"
        android:padding="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/add_new_cat_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_photo_black_24dp"/>

        <TextView
            android:id="@+id/add_new_cat_image_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" + Add/Change Image"
            android:lines="1"
            android:padding="8dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/add_new_cat_add_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload"
            android:padding="4dp"
            android:background="@drawable/back_rectangle_4dp_layout"
            android:backgroundTint="@color/colorDarkViolet"
            android:lines="1"
            android:layout_margin="2dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>


        <TextView
            android:id="@+id/back_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="<< Back"
            android:padding="4dp"
            android:lines="1"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>