<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_rectangle_4dp_layout"
    android:backgroundTint="@color/colorWhite"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:background="@drawable/back_rectangle_4dp_layout"
        android:backgroundTint="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Add New Layout"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/close_add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/back_rectangle_4dp_layout"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_close_black_24dp"
            android:tint="@color/colorWhite" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="visible"
                android:id="@+id/add_banner_slider_layout"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:background="@drawable/back_1dp_border_4dp_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:elevation="4dp"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp"
                    app:layout_constraintBottom_toTopOf="@+id/add_banner_slider_layout_LinearLay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorRecyclerBack"/>
                        <FrameLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorRecyclerBack"/>
                        <FrameLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorRecyclerBack"/>
                        <FrameLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorRecyclerBack"/>
                    </LinearLayout>

                </HorizontalScrollView>
                <LinearLayout
                    android:id="@+id/add_banner_slider_layout_LinearLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingLeft="8dp"
                        android:textAlignment="center"
                        android:text="Add New Banner Slider Layout"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_horizontal_layout"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:background="@drawable/back_1dp_border_4dp_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_rectangle_4dp_layout"
                    android:backgroundTint="@color/colorRecyclerBack"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:elevation="4dp"
                    android:layout_margin="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/add_horizontal_layout_LinearLay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="Heading (Total items)"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:backgroundTint="@color/colorGray"
                            android:text="View All" />
                    </LinearLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@drawable/back_rectangle_4dp_layout"
                                android:backgroundTint="@color/colorGray"/>
                            <FrameLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@drawable/back_rectangle_4dp_layout"
                                android:backgroundTint="@color/colorGray"/>
                            <FrameLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@drawable/back_rectangle_4dp_layout"
                                android:backgroundTint="@color/colorGray"/>
                            <FrameLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@drawable/back_rectangle_4dp_layout"
                                android:backgroundTint="@color/colorGray"/>
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_horizontal_layout_LinearLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingLeft="8dp"
                        android:textAlignment="center"
                        android:text="Add New Products Horizontal Layout"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_grid_layout"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:background="@drawable/back_1dp_border_4dp_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_rectangle_4dp_layout"
                    android:backgroundTint="@color/colorRecyclerBack"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:elevation="4dp"
                    android:layout_margin="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/add_grid_layout_LinearLay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="Heading (Total items)"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:backgroundTint="@color/colorGray"
                            android:text="View All" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorGray" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorGray" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_rectangle_4dp_layout"
                            android:backgroundTint="@color/colorGray" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_grid_layout_LinearLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingLeft="8dp"
                        android:textAlignment="center"
                        android:text="Add New Products Grid Layout"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="visible"
                android:id="@+id/add_strip_ad_layout"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:background="@drawable/back_1dp_border_4dp_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:background="@drawable/back_rectangle_4dp_layout"
                    android:backgroundTint="@color/colorRecyclerBack"
                    app:layout_constraintBottom_toTopOf="@+id/add_strip_ad_layout_LinearLay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/add_strip_ad_layout_LinearLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Add New Banner Ad Layout"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
